    "instructions": [
        {
            "number": 1,
            "instruction": "Preheat the oven to 200C/180C Fan/Gas"
        },
        {
            "number": 2,
            "instruction": "Put the sausages in a roasting tin and place in the preheated oven. Cook for 10 minutes then turn the sausages and cook for a further 5 minutes, or until they have a good colour on the outside."
        },
        {
            "number": 3,
            "instruction": "Add the sliced onions to the tin."
        },
        {
            "number": 4,
            "instruction": "Mix the dried herbs, mustard and stock together and pour over the sausages and onions. Return the tin to the oven for a further 20 minutes, or until the sausages are cooked through and the onion gravy thickened. Season to taste with salt and pepper."
        },
        {
            "number": 5,
            "instruction": "For the mash, boil the potatoes in a pan of boiling water until tender."
        },
        {
            "number": 6,
            "instruction": "Drain and mash."
        },
        {
            "number": 7,
            "instruction": "Heat the butter and milk until the butter has melted."
        },
        {
            "number": 8,
            "instruction": "Add a pinch of salt and pepper then pour over the mashed potato and mix until smooth. Set aside until ready to serve."
        },
        {
            "number": 9,
            "instruction": "Cook the peas in a saucepan of boiling water for 2–3 minutes, or steam them for 1–2 minutes."
        },
        {
            "number": 10,
            "instruction": "Drain thoroughly and set aside."
        },
        {
            "number": 11,
            "instruction": "For the sausages and onion gravy, mix the softened butter and plain flour together to form a paste."
        },
        {
            "number": 12,
            "instruction": "Remove the sausages from the baking tray, set aside and cover to keep warm."
        },
        {
            "number": 13,
            "instruction": "Place the baking tray onto the hob, add the flour and butter mixture and whisk until combined. Stir over a medium-high heat for 2–3 minutes, or until the gravy has thickened slightly."
        },
        {
            "number": 14,
            "instruction": "Add the sausages back to the tray and warm through for 1–2 minutes."
        },
        {
            "number": 15,
            "instruction": "Serve the sausages, mash and peas with the onion gravy spooned over."
        }
    ]
