    "instructions": [
        {
            "number": 1,
            "instruction": "Half-fill a saucepan with cold water and add the potatoes and carrots. Bring to the boil and cook for 8 minutes."
        },
        {
            "number": 2,
            "instruction": "Add the cauliflower florets and cook for 2 minutes more."
        },
        {
            "number": 3,
            "instruction": "Drain in a colander and set aside."
        },
        {
            "number": 4,
            "instruction": "Heat the oil in a large, non-stick frying pan or wide-based saucepan."
        },
        {
            "number": 5,
            "instruction": "Add the onion and cook over a medium heat for 8 minutes or until well softened and lightly browned, stirring regularly."
        },
        {
            "number": 6,
            "instruction": "Sprinkle over the curry powder and cook for 30 seconds more, stirring."
        },
        {
            "number": 7,
            "instruction": "Add the tomatoes to the onions and cook for 2–3 minutes, stirring constantly."
        },
        {
            "number": 8,
            "instruction": "Add the stock and bring to a gentle simmer."
        },
        {
            "number": 9,
            "instruction": "Add the vegetables and peas or spinach and simmer gently for 5 minutes, stirring regularly. If the sauce thickens too much, add a splash of water."
        },
        {
            "number": 10,
            "instruction": "Serve immediately with yoghurt and mango chutney."
        }
