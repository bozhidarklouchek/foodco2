    "instructions": [
        {
            "number": 1,
            "instruction": "In a large cast-iron skillet, heat 1 tablespoon oil over medium-high heat. Season the salmon with ½ teaspoon salt. When oil is hot but not smoking, add salmon skin side up."
        },
        {
            "number": 2,
            "instruction": "Let sit undisturbed until golden and salmon easily releases from pan, about 4 minutes. Use a thin metal spatula,&nbsp; flip salmon and&nbsp;cook until golden on the other side, about 2 minutes more."
        },
        {
            "number": 3,
            "instruction": "Remove to a plate."
        },
        {
            "number": 4,
            "instruction": "Reduce heat to medium and add remaining tablespoon oil and onion to skillet. Cook, stirring occasionally, until softened, 2 minutes."
        },
        {
            "number": 5,
            "instruction": "Add garlic and ginger and cook, stirring, until fragrant, 1 minute.&nbsp;"
        },
        {
            "number": 6,
            "instruction": "Stir in coconut milk and bring to a simmer. Cook, stirring occasionally, until thickened, 5 minutes. Stir in lime juice and remaining&nbsp;½ teaspoon salt."
        },
        {
            "number": 7,
            "instruction": "Remove from heat and return salmon to pan."
        },
        {
            "number": 8,
            "instruction": "Garnish with basil and Fresno&nbsp;chili, and serve with lime wedges."
        }
    ]
