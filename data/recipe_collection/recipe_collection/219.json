    "instructions": [
        {
            "number": 1,
            "instruction": "In a large bowl, combine the soy sauce, sake (or dry sherry) and a tablespoon of the cornflour."
        },
        {
            "number": 2,
            "instruction": "Add the pork and stir to coat. Leave to stand for 10 minutes."
        },
        {
            "number": 3,
            "instruction": "For the egg-fried rice, cook the rice according to the packet instructions."
        },
        {
            "number": 4,
            "instruction": "Drain, then spread out on a plate to cool."
        },
        {
            "number": 5,
            "instruction": "Heat one tablespoon of the oil in a frying pan over a medium–high heat, add the pork and stir-fry for 5–7 minutes until golden-brown."
        },
        {
            "number": 6,
            "instruction": "Remove the pork from the pan and set aside."
        },
        {
            "number": 7,
            "instruction": "Return the pan to the heat and add another tablespoon of oil."
        },
        {
            "number": 8,
            "instruction": "Add the garlic, onion, green pepper, carrot and ginger and stir fry over a medium–high heat for 2 minutes."
        },
        {
            "number": 9,
            "instruction": "Meanwhile, in a bowl, whisk together the sugar, vinegar, 170ml/6fl oz water, the remaining cornflour and a pinch of salt."
        },
        {
            "number": 10,
            "instruction": "Add to the pan and bring to the boil, then reduce the heat slightly and simmer, stirring frequently, for 5 minutes until thickened."
        },
        {
            "number": 11,
            "instruction": "Remove from the heat and stir in the cooked pork. Season to taste with salt and pepper and set aside."
        },
        {
            "number": 12,
            "instruction": "For the rice, heat the oil in a wok or large non-stick pan over a high heat."
        },
        {
            "number": 13,
            "instruction": "Add the cooled rice and beaten eggs and stir-fry for 4–6 minutes until some of the rice begins to colour and the egg is cooked."
        },
        {
            "number": 14,
            "instruction": "Spoon the rice onto a serving plate and top with the pork and vegetables."
        },
        {
            "number": 15,
            "instruction": "Garnish with the sliced spring onions and red chilli."
        }
    ]
