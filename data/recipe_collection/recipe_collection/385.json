    "instructions": [
        {
            "number": 1,
            "instruction": "Heat half the oil over a medium heat in a large, heavy-based saucepan."
        },
        {
            "number": 2,
            "instruction": "Add half the garlic, if using, half the ginger and all the chilli flakes, if using. Fry, stirring all the time, for 1 minute."
        },
        {
            "number": 3,
            "instruction": "Add the lentils and fry, stirring, for a further minute."
        },
        {
            "number": 4,
            "instruction": "Pour in the stock and bring to the boil. Simmer, with the lid off, for 10–12 minutes, or until the lentils are soft."
        },
        {
            "number": 5,
            "instruction": "Meanwhile, heat the remaining oil in a heavy-based frying pan."
        },
        {
            "number": 6,
            "instruction": "Add the remaining garlic and ginger and the butternut squash and cook, stirring, for 12 minutes."
        },
        {
            "number": 7,
            "instruction": "Add the butternut squash to the lentils and cook for a further 5 minutes."
        },
        {
